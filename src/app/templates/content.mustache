<header class="top-toolbar bar bar-nav">
</header>
<div class="content sliding left hidden">
    <div class="card">
        <ul class="table-view">
            <li class="table-view-cell">{{playback.device.name}}</li>
            <li class="table-view-cell">{{user.email}}</li>
            {{#user.devices}}
            <li class="table-view-cell">{{id}}</li>
            {{/user.devices}}
        </ul>
    </div>
    <div class="card">
        <div id="player">
            <div class="album" style="background-image: url('{{playback.item.album.images.0.url}}');">
                <div class="heart"><span class="icon icon-check"></span></div>
            </div>
            <div class="info">
                <div class="progress-bar">
                    <div class="time--current">1:25</div>
                    <div class="time--total">-3:15</div>
                    <div class="fill"></div>
                </div>
                <div class="currently-playing">
                    <h2 class="song-name">{{playback.item.name}}</h2>
                    <h3 class="artist-name">{{playback.item.album.artists.0.name}}</h3>
                </div>
                <div class="controls">
                    <div class="option"><span class="icon icon-bars"></span></div>
                    <div class="volume"><span class="icon icon-sound"></span></div>
                    <div class="previous"><span class="icon icon-back"></span></div>
                    <div class="play"><span class="icon icon-play"></span></div>
                    <div class="pause hidden"><span class="icon icon-pause"></span></div>
                    <div class="next"><span class="icon icon-forward"></span></div>
                    <div class="shuffle"><span class="icon icon-refresh"></span></div>
                    <div class="add"><span class="icon icon-plus"></span></div>
                </div>
            </div>
        </div>
    </div>
</div>