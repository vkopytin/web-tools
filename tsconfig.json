{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "jsx": "react",
        "allowJs": false,
        "allowUnreachableCode": true,
        "baseUrl": "./src",
        "lib": [
            "es6", "dom"
        ]
    },
//    "include": [ "**/*.ts" ],
    "exclude": [ "./src/server", "node_modules" ],
    "filesGlob": [
        "./src/*.d.ts"
    ]
}